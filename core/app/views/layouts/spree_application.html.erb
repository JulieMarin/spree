<!DOCTYPE HTML>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head data-hook="inside_head">
    <%= render :partial => 'shared/head'%>
  </head>
  <body class="<%= body_class %>" id="<%= @body_id || 'default' %>">
    <div id="header">
      <ul id="nav-bar">
        <%= render 'shared/nav_bar' %>
      </ul>
      <div data-hook="logo">
        <%= logo %>
      </div>
    </div>

    <div id="wrapper">
      <% if content_for?(:sidebar) %>
        <div id="sidebar" data-hook data-layer="1">
          <%= yield :sidebar %>
        </div>
      <% end %>

      <div id="content">
        <div data-hook="breadcrumbs">
          <%= breadcrumbs(@taxon) %>
        </div>
        <div data-hook="flash-messages">
          <%= flash_messages %>
        </div>
        <%= yield %>
      </div>
    </div>
    <%= render :partial => 'shared/footer'%>
  </body>
</html>
