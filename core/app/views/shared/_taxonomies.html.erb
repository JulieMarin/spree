<div id="taxonomies" class="sidebar-item">
  <% get_taxonomies.each do |taxonomy| %>
    <h3 class='taxonomy-root'><%= t("shop_by_taxonomy", :taxonomy => taxonomy.name.singularize) %></h3>
    <ul class="taxons-list">  
      <% taxonomy.root.children.each do |taxon| %>
        <li<%== ' class="current"' if @taxon and @taxon.self_and_ancestors.include?(taxon) %>>
          <%= link_to taxon.name, seo_url(taxon) %>
        </li>
	    <% end %>

	  </ul>
  <% end %>
</div>
